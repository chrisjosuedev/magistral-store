<div class="container">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard"> <i class="fas fa-home"></i> </a></li>
            <li class="breadcrumb-item"><a href="/config/mi-perfil"> Mi Perfil </a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar Contraseña</li>
        </ol>
    </nav>
</div>

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header font-weight-bold">
                    Cambiar contraseña
                </div>
                <div class="card-body">
                    <form action="/config/mi-perfil/edit/{{user.USERNAME}}" method="POST">
                        <div class="form-group">
                            <input type="password" class="form-control" name="password_old"
                                placeholder="Ingrese contraseña actual" maxlength="60" required autofocus>
                        </div>


                        <div class="form-group">
                            <input type="password" id="primer-pass" class="form-control"
                                placeholder="Ingrese nueva contraseña" maxlength="60" required autofocus>

                        </div>

                        <div class="form-group">
                            <input type="password" id="segundo-pass" class="form-control" name="password"
                                placeholder="Repita nueva contraseña" maxlength="60" required autofocus>
                            <div id="msg-valid" class="valid-feedback">
                                Success! You've done it.
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success float-right">
                                <i class="fas fa-save"></i> Editar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/perfil/perfil.js"></script>