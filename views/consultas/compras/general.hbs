<div class="container">
  <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/dashboard"> <i class="fas fa-home"></i> </a></li>
      <li class="breadcrumb-item active" aria-current="page"> General </li>
    </ol>
  </nav>
  <h1 class="mb-4"> Consulta de Compras </h1>
  <div class="alert alert-warning d-none" role="alert" id="alert">
    A simple danger alertâ€”check it out!
  </div>
  <div class="col-md-12">
    <div class="card">
      <div class="card-header font-weight-bold">
        <i class="fas fa-list"></i> Lista General de Compras
      </div>
      <div class="card-body">
        <div class="form-group form-check ml-2" id="contDate">
          <input class="form-check-input" type="checkbox" value="" id="filterDate">
          <label for="filterDate"> Filtrar por fecha </label>
        </div>

        <div class="form-row justify-content-end d-none" id="rangeDate">
          <div class="form-group col-md-4">
            <label for="fecha-in"> De </label>
            <input type="date" class="form-control" placeholder="De" id="fecha-in">
          </div>
          <div class="form-group col-md-4">
            <label for="fecha-out"> Hasta </label>
            <input type="date" class="form-control" id="fecha-out">
          </div>
        </div>



        <table class="table table-striped" id="table-consultas-compras">
          <thead>
            <tr>
              <th scope="col">ID Compra</th>
              <th scope="col">Proveedor</th>
              <th scope="col">Fecha</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each compras}}
            <tr>
              <td>
                {{ID_COMPRA}}
              </td>
              <td>
                {{NOMBRE_PROVEEDOR}}
              </td>
              <td>
                {{format FECHA}}
              </td>
              <td>
                <a href="/consultas/compras/detalle/{{ID_COMPRA}}" class="btn btn-secondary">
                  <i class="fas fa-eye"></i>
                </a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>

{{!-- Scripts SRC --}}
<script src="/js/consultas/compras.js"></script>
{{!-- Level Custom --}}
<script src="/js/datatables/data-consultas-compras.js"></script>