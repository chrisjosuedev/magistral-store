<div class="container">
  <h1 class="mb-4"> Consulta de Ventas </h1>
  <div class="alert alert-warning d-none" role="alert" id="alert">
    A simple danger alert—check it out!
  </div>
  <div class="col-md-12">
    <div class="card">
      <div class="card-header font-weight-bold">
        <i class="fas fa-list"></i> Lista General de Facturas
      </div>
      <div class="card-body">

        <div class="form-group form-check ml-2" id="contDate">
          <input class="form-check-input" type="checkbox" value="" id="filterDate">
          <label for="filterDate"> Filtrar por fecha </label>
        </div>

        <div class="form-row justify-content-end d-none" id="rangeDate">
          <div class="form-group col-md-4">
            <label for="fecha-in"> De </label>
            <input type="date" class="form-control" placeholder="De" id="fecha-in">
          </div>
          <div class="form-group col-md-4">
            <label for="fecha-out"> Hasta </label>
            <input type="date" class="form-control" id="fecha-out">
          </div>
        </div>



        <table class="table table-striped" id="table-consultas-ventas">
          <thead>
            <tr>
              <th scope="col">N° Factura</th>
              <th scope="col">Cliente</th>
              <th scope="col">Fecha</th>
              <th scope="col">Modo Pago</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            {{#each ventas}}
            <tr>
              <td>
                {{ID_FACTURA}}
              </td>
              <td>
                {{NOMBRE_PERSONA}} {{APELLIDO_PERSONA}}
              </td>
              <td>
                {{format FECHA}}
              </td>
              <td>
                {{DESC_MODOPAGO}}
              </td>
              <td class="text-right">
                <a href="/consultas/ventas/detalle/{{ID_FACTURA}}" class="btn btn-secondary">
                  <i class="fas fa-eye"></i>
                </a>
                <a href="#" class="btn btn-danger">
                  <i class="fas fa-file-pdf"></i>
                </a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

{{!-- Scripts SRC --}}
<script src="/js/consultas/ventas.js"></script>
{{!-- Level Custom --}}
<script src="/js/datatables/data-consultas-ventas.js"></script>