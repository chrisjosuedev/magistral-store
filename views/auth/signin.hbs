<div class="container" style="margin-top: 50px;">
  <div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center mb-4">
                  <box-icon name='shopping-bag' class="mr-2" type='solid' color='black'></box-icon>
                  <h1 class="h4 text-gray-900"> <strong> Magistral Store Online </strong></h1>
                  <p class="brand"> Inicia Sesión </p>
                </div>

                <form action="/" method="post" class="user">
                  <div class="form-group">
                    <input type="text" class="form-control signin" name="username"
                      aria-describedby="emailHelp" placeholder="Username" maxlength="16" required>
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control signin"
                      placeholder="Password" name="password" maxlength="60" required>
                  </div>
                  <button type="submit" class="btn btn-primary btn-block">
                    Iniciar Sesión
                  </button>
                  <hr>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>