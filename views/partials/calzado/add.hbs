<!-- Modal HTML -->
<div id="newArticuloCalzado" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">AGREGAR NUEVO ARTÍCULO DE CALZADO</h5>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <form action="/articulos/newCalzado" method="post">
          <label> Datos Generales </label>
          <div class="form-group">
            <input type="text" class="form-control" name="descripcion" placeholder="Descripción del artículo" maxlength="50" required>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <select id="inputState" name="id_marca" class="custom-select" required>
                <option value="0" selected> - Seleccione Marca - </option>
                {{#each marca}}
                <option value="{{ID_MARCA}}"> {{NOMBRE_MARCA}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group col-md-6">
              <select id="inputState" name="id_linea_articulo" class="custom-select" required>
                <option value="0" selected> - Seleccione Línea - </option>
                {{#each linea_articulo}}
                <option value="{{ID_LINEA_ARTICULO}}"> {{DESC_LINEA}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <label> Caracteristicas del Artículo </label>
          <div class="form-row">
            <div class="form-group col-md-6">
              <select id="inputState" name="id_color" class="custom-select" required>
                <option value="0" selected> - Seleccione Color - </option>
                {{#each color}}
                <option value="{{ID_COLOR}}"> {{DESC_COLOR}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group col-md-6">
              <input type="number" min="0" step="0.01" class="form-control" 
              name="precio_unit" placeholder="Precio" required>
            </div>
          </div>
          <div class="form-row">


            <div class="form-group col-md-6">
              <input type="text" class="form-control" name="talla" placeholder="Talla" maxlength="15" required>
            </div>

            <div class="form-group col-md-6">
              <select id="detalle_articulo" name="id_tipocalzado" class="custom-select" required>
                <option value="0" selected> - Seleccione Detalle - </option>
                {{#each tipos_calzado}}
                <option value="{{ID_TIPOCALZADO}}"> {{DESC_TIPOCALZADO}}</option>
                {{/each}}
              </select>
            </div>
            
          </div>

          <input type="text" name="id_ban" hidden value="calzado">

          <button type="submit" class="btn btn-primary mt-4 float-right">
            <i class="fas fa-save"></i> Guardar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>