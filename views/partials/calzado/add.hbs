<!-- Modal HTML -->
<div id="newArticuloCalzado" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">AGREGAR NUEVO ARTÍCULO DE CALZADO</h5>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <form action="/articulos/newCalzado" method="post">
          <label> Datos Generales </label>
          <div class="form-group">
            <input type="text" class="form-control" name="descripcion" placeholder="Descripción del artículo" maxlength="50" required>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="marca-add"> Seleccione marca </label>
              <select id="marca-add" name="id_marca" class="custom-select" required>
                {{#each marca}}
                <option value="{{ID_MARCA}}"> {{NOMBRE_MARCA}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group col-md-6">
              <label for="linea-add"> Seleccione Línea </label>
              <select id="linea-add" name="id_linea_articulo" class="custom-select" required>
                {{#each linea_articulo}}
                <option value="{{ID_LINEA_ARTICULO}}"> {{DESC_LINEA}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="color-add"> Seleccione Color </label>
              <select id="color-add" name="id_color" class="custom-select" required>
                {{#each color}}
                <option value="{{ID_COLOR}}"> {{DESC_COLOR}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group col-md-6">
              <label for="precio-add"> Precio de Venta </label>
              <input  id="precio-add" type="number" min="0" step="0.01" class="form-control" 
              name="precio_unit" placeholder="Precio" required>
            </div>
          </div>
          <div class="form-row">


            <div class="form-group col-md-6">
              <label for="talla-add"> Talla del Articulo </label>
              <input id="talla-add" type="text" class="form-control" name="talla" placeholder="Talla" maxlength="15" required>
            </div>

            <div class="form-group col-md-6">
              <label for="detalle_articulo"> Seleccione detalle </label>
              <select id="detalle_articulo" name="id_tipocalzado" class="custom-select" required>
                {{#each tipos_calzado}}
                <option value="{{ID_TIPOCALZADO}}"> {{DESC_TIPOCALZADO}}</option>
                {{/each}}
              </select>
            </div>
            
          </div>

          <input type="text" name="id_ban" hidden value="calzado">

          <button type="submit" class="btn btn-primary mt-4 float-right">
            <i class="fas fa-save"></i> Guardar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>