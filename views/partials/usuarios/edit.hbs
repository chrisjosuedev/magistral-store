<div class="modal fade" id="editUsuario" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                
                <form action="" method="post" id="edit-Usuario" name="edit-Usuario">
                    <label> Username </label>
                    <div class="form-group">
                        <input type="text" id="username" class="form-control" name="username" placeholder="Username"
                            disabled>
                    </div>


                    <div class="form-group row">
                        <div class="col-sm-10">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="verify-Password">
                                <label class="custom-control-label" for="verify-Password">
                                    Asignar una nueva contrase√±a
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control d-none" id="password" name="password" placeholder="Password" value="" maxlength="60">
                    </div>

                    <label> Editar Rol </label>
                    <div class="form-group">
                        <select id="select-rol" name="id_rol" class="custom-select">
                            {{#each roles}}
                            <option value="{{ID_ROL}}"> {{DESC_ROL}} </option>
                            {{/each}}
                        </select>
                    </div>


                    <button type="submit" class="btn btn-primary mt-4 float-right">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>