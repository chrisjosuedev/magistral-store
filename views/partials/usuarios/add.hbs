<!-- Modal HTML -->
<div id="newUsuario" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">AGREGAR NUEVO USUARIO</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <div class="alert alert-danger d-none" role="alert" id="alert">
                    Alerta Simple
                </div>

                <form action="/config/usuarios/new" method="post">
                    <label> Datos Usuario </label>

                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <input type="text" id="idEmp" class="form-control" placeholder="Identidad" autofocus required>
                        </div>
                        <div class="form-group">
                            <button type="button" id="bEmp" class="btn btn-success" style="width: 4.375rem;">
                                <i class=" fas fa-search"></i>
                            </button>
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <input type="text" id="codEmp" class="form-control" name="id_empleado" hidden>
                        </div>
                        <div class="form-group col-md-12">
                            <input type="text" id="nameEmp" class="form-control" name="name_emp"
                                placeholder="Nombre Empleado" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="text" id="user" class="form-control" name="username" placeholder="Username" autofocus
                            required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                    </div>

                    <div class="form-group">
                        <select id="inputState sel-tipo" name="id_rol" class="custom-select">
                            <option selected> - Seleccionar rol - </option>
                            {{#each roles}}
                            <option value="{{ID_ROL}}"> {{DESC_ROL}} </option>
                            {{/each}}
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary mt-4 float-right">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>