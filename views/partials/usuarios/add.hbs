<!-- Modal HTML -->
<div id="newUsuario" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">AGREGAR NUEVO USUARIO</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <div class="alert alert-danger d-none alert-users" role="alert" id="alert">
                    Alerta Simple
                </div>

                <form action="/config/usuarios/new" method="post" id="users_form">
                    <label> Datos Usuario </label>

                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <input type="text" id="idEmp" class="form-control" placeholder="Identidad" autofocus
                                required>
                        </div>
                        <div class="form-group">
                            <button type="button" id="bEmp" class="btn btn-success" style="width: 4.375rem;">
                                <i class=" fas fa-search"></i>
                            </button>
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            {{!-- Hidden --}}
                            <input type="text" id="codEmp" class="form-control" hidden name="id_empleado">
                        </div>
                        <div class="form-group col-md-12">
                            <input type="text" id="nameEmp" class="form-control" name="name_emp"
                                placeholder="Nombre Empleado" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        
                        <input type="text" id="user" class="form-control" name="username" placeholder="Username"
                            maxlength="16" autofocus required>
                        <div id="msg-valid" class="valid-feedback">
                                Username disponible.
                        </div>
                        
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password"
                            maxlength="60" required>
                    </div>

                    <label> Seleccionar Rol del Usuario </label>
                    <div class="form-group">
                        <select id="rol-selected" name="id_rol" class="custom-select" required>
                            {{#each roles}}
                            <option value="{{ID_ROL}}"> {{DESC_ROL}} </option>
                            {{/each}}
                        </select>

                    </div>

                    <button type="submit" class="btn btn-primary mt-4 float-right" id="saveUsuario" disabled>
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>