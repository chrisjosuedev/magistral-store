<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Listado de Usuarios</h6>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataUsuarios" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Nombre Empleado</th>
                    <th>Rol</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Username</th>
                    <th>Nombre Empleado</th>
                    <th>Rol</th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                {{#each usuario}}
                <tr>
                    <td> {{USERNAME}} </td>
                    <td> {{NOMBRE_EMPLEADO}} </td>
                    <td> {{DESC_ROL}} </td>
                    {{!-- Buscar forma de mostrar ocultar texto password --}}
                    <td class="text-center">
                        <button class="btn btn-primary editUsuario" data-toggle="modal" data-target="#editUsuario"
                            data-usuario="{{USERNAME}}">
                            <i class="fas fa-pen"></i>
                        </button>
                        <button class="btn btn-danger delete-user" id="{{USERNAME}}">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>