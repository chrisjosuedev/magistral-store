<div class="modal fade" id="editColor" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar Color</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="" method="post" id="edit-color" name="edit-color">

                    <label> Datos de Color </label>
                    <div class="form-group">
                        <div class="form-group">
                            <input type="text" class="form-control to-mayus"
                                onkeyup="javascript:this.value=this.value.toUpperCase();" id="desc_color"
                                name="desc_color" placeholder="Nuevo Color" maxlength="20" required>
                        </div>
                    </div>


                    <button type="submit" class="btn btn-primary mt-4 float-right">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>