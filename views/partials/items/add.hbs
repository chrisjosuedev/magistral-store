<!-- Modal HTML -->
<div id="newArticulo" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">AGREGAR NUEVO ARTÍCULO</h5>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <form action="" id="form-newArticulo" method="post">
          <label> Datos Generales </label>
          <div class="form-group">
            <input type="text" class="form-control" name="descripcion" placeholder="Descripción del artículo" maxlength="50" required>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="marca"> Seleccione marca </label>
              <select id="marca" name="id_marca" class="custom-select" required>
                {{#each marca}}
                <option value="{{ID_MARCA}}"> {{NOMBRE_MARCA}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group col-md-6">
              <label for="linea"> Seleccione Línea </label>
              <select id="linea" name="id_linea_articulo" class="custom-select" required>
                {{#each linea_articulo}}
                <option value="{{ID_LINEA_ARTICULO}}"> {{DESC_LINEA}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="color"> Seleccione Color </label>
              <select id="color" name="id_color" class="custom-select" required>
                {{#each color}}
                <option value="{{ID_COLOR}}"> {{DESC_COLOR}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group col-md-6">
              <label for="precio"> Precio de Venta </label>
              <input id="precio" type="number" min="0" step="0.01" class="form-control" 
              name="precio_unit" placeholder="Precio" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <input type="text" class="form-control" name="talla" placeholder="Talla" maxlength="15" required>
            </div>
          </div>
          <label> Tipo de Artículo </label>
          <div class="form-row">
            <div class="form-group col-md-6">
              <select id="tipo_articulo" name="tipo_articulo" class="custom-select" required>
                <option value="0" selected> - Seleccione Tipo - </option>
                <option value="1"> ROPA </option>
                <option value="2"> CALZADO </option>
                <option value="3"> ACCESORIOS </option>
              </select>
              <div id="msg-tipo" class="valid-feedback"></div>
            </div>
            <div class="form-group col-md-6">
              <select id="detalle_articulo" name="temp" class="custom-select" required>
                <option value="0" selected> - Seleccione Detalle - </option>
              </select>
              <div id="msg-detalle" class="valid-feedback"></div>
            </div>
          </div>

          <input type="text" name="id_ban" hidden value="art">

          <button type="submit" class="btn btn-primary mt-4 float-right">
            <i class="fas fa-save"></i> Guardar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>