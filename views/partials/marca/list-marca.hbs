<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Listado de Marcas</h6>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataMarcas" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Marca</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Marca</th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                {{#each marca}}
                <tr>
                    <td> {{ID_MARCA}} </td>
                    <td> {{NOMBRE_MARCA}} </td>
                    <td class="text-center">
                        <button class="btn btn-primary editMarca"
                            data-toggle="modal" data-target="#editMarca"
                            data-marca="{{ID_MARCA}}">
                            <i class="fas fa-pen"></i>
                        </button>
                        <a href="/articulos/marcas/delete/{{ID_MARCA}}" class="btn btn-danger del-item">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>