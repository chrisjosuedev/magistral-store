<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Listado de Tipos de Accesorios</h6>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataAccesorios" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tipo de Accesorio</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Tipo de Accesorio</th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                {{#each tipos_accesorios}}
                <tr>
                    <td> {{ID_TIPOACCESORIO}} </td>
                    <td> {{DESC_TIPOACCESORIO}} </td>
                    <td class="text-center">
                        <button class="btn btn-primary editTipoAccesorio" data-toggle="modal"
                            data-target="#editTipoAccesorio" data-taccesorio="{{ID_TIPOACCESORIO}}">
                            <i class="fas fa-pen"></i>
                        </button>
                        <button id="{{ID_TIPOACCESORIO}}"
                            class="btn btn-danger del-item delete-taccesorio">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>