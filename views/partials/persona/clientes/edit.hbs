<div class="modal fade" id="editCliente" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar Cliente </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="" method="post" id="edit-cliente" name="edit-cliente">
                    <div class="form-group">
                        <div class="form-group">
                            <input type="text" class="form-control" id="id_persona" name="id_persona"
                                placeholder="IDENTIDAD" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group">
                            <input type="text" id="nombre_persona" class="form-control to-mayus" name="nombre_persona"
                                placeholder="Nombre" maxlength="50" onkeyup="javascript:this.value=this.value.toUpperCase();" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <input type="text" id="apellido_persona" class="form-control to-mayus" name="apellido_persona"
                                placeholder="Apellidos" maxlength="50" onkeyup="javascript:this.value=this.value.toUpperCase();" required>
                        </div>
                    </div>

                    <div class="form-row">

                        <div class="form-group col-lg-6 mt-2">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="sexo" id="male" value="0">
                                <label class="form-check-label" for="male"> Masculino </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="sexo" id="female" value="1">
                                <label class="form-check-label" for="female"> Femenino </label>
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <input type="text" id="celular" class="form-control" name="celular" placeholder="Celular" maxlength="8" required pattern="[0-9]{8}">
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="form-group">
                            <textarea class="form-control" name="direccion_residencia" id="direccion_residencia" cols="30" rows="2" placeholder="Direccion de Residencia" maxlength="200" required></textarea>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6" id="tipo">
                            <select id="select-depto" name="id_depto" class="custom-select depto">
                                {{#each departamentos}}
                                <option value="{{ID_DEPTO}}"> {{NOMBRE_DEPTO}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <select id="select-ciudad" name="id_ciudad" class="custom-select ciudad">
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mt-4 float-right">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>