<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Listado de Clientes</h6>
</div>
<div class="card-body">
    <div class="table-responsive">

        <table class="table table-bordered" id="dataClientes" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>RTN</th>
                    <th>Cliente</th>
                    <th>Sexo</th>
                    <th>Celular</th>
                    <th>Domicilio</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>RTN</th>
                    <th>Cliente</th>
                    <th>Sexo</th>
                    <th>Celular</th>
                    <th>Domicilio</th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                {{#each persona_cliente}}
                <tr >
                    <td>
                        {{ID_PERSONA}}
                    </td>
                    <td>
                        {{CLIENTE}}
                    </td>
                    <td>
                        {{SEXO}}
                    </td>
                    <td>
                        {{CELULAR}}
                    </td>
                    <td>
                        {{DOMICILIO}}
                    </td>
                    <td class="text-center">
                        <button class="btn btn-primary editCliente"
                            data-toggle="modal" data-target="#editCliente"
                            data-cliente="{{ID_PERSONA}}">
                            <i class="fas fa-pen"></i>
                        </button>
                        <button id="{{ID_PERSONA}}" class="btn btn-danger del-item mt-2 delete-cliente">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</div>