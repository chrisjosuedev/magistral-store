<!-- Modal HTML -->
<div id="newProveedor" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">AGREGAR NUEVO PROVEEDOR</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/proveedores/new" method="post">
                    <label> Datos de Proveedor </label>
                    <div class="form-group">
                        <input type="text" class="form-control" name="id_proveedor" placeholder="R.T.N." autofocus
                            required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="nombre_proveedor" placeholder="Proveedor"
                            required>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email_proveedor" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="cel_proveedor" placeholder="Celular" required>
                    </div>


                    <button type="submit" class="btn btn-primary mt-4 float-right">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>