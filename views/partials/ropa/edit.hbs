<div class="modal fade" id="editRopaArt" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar Articulo de Ropa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="" method="post" id="edit-ropaart" name="edit-ropaart">

                    <label> Datos Generales </label>
                    <div class="form-group">
                        <input type="text" id="descripcion" class="form-control" name="descripcion"
                            placeholder="Descripción del artículo" maxlength="50" required>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="marca"> Seleccione marca </label>
                            <select id="marca" name="id_marca" class="custom-select" required>
                                {{#each marca}}
                                <option value="{{ID_MARCA}}"> {{NOMBRE_MARCA}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="linea"> Seleccione Línea </label>
                            <select id="linea" name="id_linea_articulo" class="custom-select" required>
                                {{#each linea_articulo}}
                                <option value="{{ID_LINEA_ARTICULO}}"> {{DESC_LINEA}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="color"> Seleccione Color </label>
                            <select id="color" name="id_color" class="custom-select" required>
                                {{#each color}}
                                <option value="{{ID_COLOR}}"> {{DESC_COLOR}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="precio"> Precio de Venta </label>
                            <input type="number" id="precio" min="0" step="0.01" class="form-control" name="precio_unit"
                                placeholder="Precio" required>
                        </div>
                    </div>
                    <div class="form-row">


                        <div class="form-group col-md-6">
                            <label for="talla"> Talla del Articulo </label>
                            <input type="text" id="talla" class="form-control" name="talla" placeholder="Talla" maxlength="15" required>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="tiposropa"> Seleccione detalle </label>
                            <select id="tiposropa" name="id_tiposropa" class="custom-select" required>
                                {{#each tipos_ropa}}
                                <option value="{{ID_TIPOSROPA}}"> {{DESC_TIPOSROPA}}</option>
                                {{/each}}
                            </select>
                        </div>

                    </div>

                    <button type="submit" class="btn btn-primary mt-4 float-right">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>